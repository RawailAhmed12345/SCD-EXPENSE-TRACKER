@model ExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="mb-4">
    <h1>Create Custom Category</h1>
    <p style="color: var(--text-secondary);">Add a new category for your expenses</p>
</div>

<div class="card" style="max-width: 600px;">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" placeholder="e.g., Gym Membership" required />
            <span asp-validation-for="Name" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Icon" class="form-label">Icon (Font Awesome class)</label>
            <input asp-for="Icon" class="form-control" placeholder="e.g., fa-dumbbell" value="fa-circle" required />
            <small style="color: var(--text-tertiary);">
                Browse icons at <a href="https://fontawesome.com/icons" target="_blank">fontawesome.com/icons</a>
            </small>
            <span asp-validation-for="Icon" class="form-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Color" class="form-label">Color</label>
            <div class="flex gap-md items-center">
                <input asp-for="Color" class="form-control" type="color" value="#6366f1" style="width: 80px; height: 40px;" required />
                <input asp-for="Color" class="form-control" type="text" placeholder="#6366f1" value="#6366f1" required />
            </div>
            <span asp-validation-for="Color" class="form-error"></span>
        </div>

        <div class="flex gap-md mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Create Category
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Sync color picker with text input
        const colorPicker = document.querySelector('input[type="color"]');
        const colorText = document.querySelector('input[type="text"][name="Color"]');
        
        colorPicker.addEventListener('input', function() {
            colorText.value = this.value;
        });
        
        colorText.addEventListener('input', function() {
            if (/^#[0-9A-F]{6}$/i.test(this.value)) {
                colorPicker.value = this.value;
            }
        });
    </script>
}
