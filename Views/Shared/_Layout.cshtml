<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Professional expense tracking application with budgets, analytics, and recurring expenses" />
    <title>@ViewData["Title"] - SCD Expense Tracker</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Local CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 text-gray-800 font-inter">

    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="sidebar w-64 flex-shrink-0 flex flex-col fixed h-full transition-transform duration-300 z-20"
               style="background-color:#1E3A8A; color:#F3F4F6;">
            <!-- Logo / Header -->
            <div class="p-5 text-xl font-bold flex items-center gap-2 border-b border-blue-700">
                <i class="fas fa-wallet text-yellow-400"></i>
                <span class="text-white">ExpenseTracker</span>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-2 py-4 space-y-1">
                <a href="/Dashboard" class="nav-item flex items-center gap-3 px-3 py-2 rounded text-white hover:bg-blue-600 transition">
                    <i class="fas fa-chart-line text-yellow-300"></i> Dashboard
                </a>
                <a href="/Expenses" class="nav-item flex items-center gap-3 px-3 py-2 rounded text-white hover:bg-blue-600 transition">
                    <i class="fas fa-receipt text-yellow-300"></i> Expenses
                </a>
                <a href="/Budgets" class="nav-item flex items-center gap-3 px-3 py-2 rounded text-white hover:bg-blue-600 transition">
                    <i class="fas fa-piggy-bank text-yellow-300"></i> Budgets
                </a>
                <a href="/RecurringExpenses" class="nav-item flex items-center gap-3 px-3 py-2 rounded text-white hover:bg-blue-600 transition">
                    <i class="fas fa-redo text-yellow-300"></i> Recurring
                </a>
                <a href="/Categories" class="nav-item flex items-center gap-3 px-3 py-2 rounded text-white hover:bg-blue-600 transition">
                    <i class="fas fa-tags text-yellow-300"></i> Categories
                </a>
            </nav>

            <!-- Theme Button -->
            <div class="p-4 border-t border-blue-700">
                <button class="w-full flex items-center justify-between px-3 py-2 bg-blue-700 rounded hover:bg-blue-600" onclick="toggleTheme()">
                    <span>Theme</span>
                    <i class="fas fa-sun text-yellow-300"></i>
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 ml-64 flex flex-col overflow-auto">
            <!-- Top Bar -->
            <header class="bg-white shadow p-4 flex justify-between items-center sticky top-0 z-10">
                <button class="lg:hidden text-gray-800" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="text-lg font-semibold">@ViewData["Title"]</h1>
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2 cursor-pointer">
                        <i class="fas fa-user-circle text-xl"></i>
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="p-6">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('-translate-x-64');
        }

        function toggleTheme() {
            document.body.classList.toggle('dark');
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
